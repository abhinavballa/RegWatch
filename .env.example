# Toolhouse.ai API Key (for multi-agent orchestration)
TOOLHOUSE_API_KEY=your_toolhouse_api_key_here

# ElevenLabs API Key (for voice synthesis)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# GitHub Personal Access Token (for PR creation)
GITHUB_TOKEN=your_github_token_here

# Flask Configuration
FLASK_APP=web.app
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your_secret_key_here_change_in_production

# File Upload Configuration
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=zip,csv

# Voice Configuration
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Rachel voice
ELEVENLABS_MODEL_ID=eleven_turbo_v2_5

# Monitoring Configuration
SCRAPER_POLL_INTERVAL=3600  # 1 hour in seconds
REGULATION_SOURCES=https://www.hhs.gov/hipaa,https://www.fda.gov,https://www.federalregister.gov

# Permission Mode (auto-apply, request-approval, notify-only)
PERMISSION_MODE=request-approval

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/regwatch.log

# Change Tracking
CHANGE_LOG_PATH=logs/regulation_changes.json

# Test Data
TEST_CODEBASES_PATH=test_codebases
TEST_DATA_PATH=test_data
